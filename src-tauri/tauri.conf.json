{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dong",
  "version": "0.1.0",
  "identifier": "com.diskettekitchen.dong",
  "build": {
    "beforeDevCommand": "pnpm nuxt dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../.nuxt/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "dong",
        "width": 700,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
